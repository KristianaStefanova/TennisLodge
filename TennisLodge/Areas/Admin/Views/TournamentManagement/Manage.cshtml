@using TennisLodge.Web.ViewModels.Admin.TournamentManagement
@model IEnumerable<TournamentManagementIndexViewModel>

@{
    ViewData["Title"] = "Manage Tournaments";
}

<div class="container-fluid mt-5 px-0" style="max-width: 1000px; margin-left: 0;">
    <h1 class="mb-4 text-success fw-bold text-start">Manage Tournaments</h1>
    <p class="text-muted mb-4 text-start">View, edit, or delete tournament entries.</p>

    <div class="d-flex justify-content-start mb-4 gap-2">
        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary fw-bold">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
        <a asp-action="Create" class="btn btn-outline-success fw-bold">
            <i class="bi bi-plus-circle"></i> Add New Tournament
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info shadow-sm rounded-3 text-start">
            <i class="bi bi-exclamation-circle"></i> No tournaments available. Click "Add New Tournament" to create one.
        </div>
    }
    else
    {
        <div class="shadow-lg rounded-4">
            <table class="table table-bordered table-hover table-sm align-middle w-100">
                <thead class="table-warning">
                    <tr class="fw-bold text-start">
                        <th>Name</th>
                        <th>Category</th>
                        <th>Surface</th>
                        <th>Location</th>
                        <th>Start</th>
                        <th>End</th>
                        <th>Organizer</th>
                        <th>Admin</th>
                        <th>Players</th>
                        <th>Requests</th>
                        <th style="min-width: 230px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tournament in Model)
                    {
                        <tr class="@(tournament.IsDeleted ? "table-danger" : "") text-start">
                            <td class="fw-bold">
                                @tournament.Name
                                @if (tournament.IsDeleted)
                                {
                                    <span class="badge bg-danger ms-2">Deleted</span>
                                }
                            </td>
                            <td>@tournament.CategoryName</td>
                            <td>@tournament.Surface</td>
                            <td>@tournament.Location</td>
                            <td>@tournament.StartDate</td>
                            <td>@tournament.EndDate</td>
                            <td>@tournament.Organizer</td>
                            <td>@tournament.AdminUsername</td>
                            <td>
                                <span class="badge bg-primary-subtle text-primary fw-bold px-3 py-2 rounded-pill">@tournament.RegisteredUsersCount</span>
                            </td>
                            <td>
                                <span class="badge bg-info-subtle text-info fw-bold px-3 py-2 rounded-pill">@tournament.AccommodationRequestsCount</span>
                            </td>
                            <td>
                                <div class="d-flex justify-content-start align-items-center gap-2 flex-nowrap">
                                    <a asp-action="Edit" asp-route-id="@tournament.Id" class="btn btn-outline-primary btn-sm fw-bold px-3">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>

                                    <a asp-action="ToggleDelete" asp-route-id="@tournament.Id"
                                       class="btn btn-sm fw-bold px-3 @(tournament.IsDeleted ? "btn-outline-success" : "btn-outline-danger")">
                                        <i class="bi @(tournament.IsDeleted ? "bi-arrow-clockwise" : "bi-trash")"></i>
                                        @(tournament.IsDeleted ? "Restore" : "Delete")
                                    </a>            
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
