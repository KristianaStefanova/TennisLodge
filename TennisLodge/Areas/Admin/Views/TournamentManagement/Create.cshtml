@using TennisLodge.Web.ViewModels.Admin.TournamentManagement
@model TournamentManagementAddFormModel

@{
    ViewData["Title"] = "Create Tournament";
}

<h2>Create Tournament</h2>

<form asp-action="Create" method="post" class="row g-3 needs-validation" novalidate>
    <div class="col-md-6">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Organizer" class="form-label"></label>
        <input asp-for="Organizer" class="form-control" />
        <span asp-validation-for="Organizer" class="text-danger"></span>
    </div>

    <div class="col-md-12">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Location" class="form-label"></label>
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Surface" class="form-label"></label>
        <input asp-for="Surface" class="form-control" />
        <span asp-validation-for="Surface" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="CategoryId" class="form-label"></label>
        <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
            <option value="">-- Select Category --</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="ImageUrl" class="form-label"></label>
        <input asp-for="ImageUrl" class="form-control" placeholder="Optional: URL of image" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="StartDate" class="form-label"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="EndDate" class="form-label"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-success fw-bold">
            <i class="bi bi-plus-circle"></i> Create Tournament
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
