@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4 mb-3 text-success fw-bold">Welcome to the Admin Dashboard</h1>
        <p class="lead mb-5 text-success">Manage your application using the sections below:</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow-lg border-0 rounded-3 h-100 text-white" style="background-color: #1e2d2f;">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="bi bi-people-fill text-warning display-3 mb-3"></i>
                    <h5 class="card-title fw-bold">Manage Users</h5>
                    <p class="card-text text-light">Add, edit, or remove users and assign roles.</p>
                    <div class="mt-auto w-100">
                        <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index"
                           class="btn btn-warning fw-bold shadow-sm w-100 py-2">
                            <i class="bi bi-person-badge-fill"></i> Go to Users
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg border-0 rounded-3 h-100 text-white" style="background-color: #1e2d2f;">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="bi bi-trophy-fill text-success display-3 mb-3"></i>
                    <h5 class="card-title fw-bold">Manage Tournaments</h5>
                    <p class="card-text text-light">Create, update, and remove tournament entries.</p>
                    <div class="mt-auto w-100">
                        <a asp-area="Admin" asp-controller="TournamentManagement" asp-action="Manage"
                           class="btn btn-success fw-bold shadow-sm w-100 py-2">
                            <i class="bi bi-calendar-event-fill"></i> Go to Tournaments
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-lg border-0 rounded-3 h-100 text-white" style="background-color: #1e2d2f;">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="bi bi-house-heart-fill text-info display-3 mb-3"></i>
                    <h5 class="card-title fw-bold">Manage Accommodations</h5>
                    <p class="card-text text-light">Review and manage accommodation offers and requests.</p>
                    <div class="mt-auto w-100">
                        <a asp-area="Admin" asp-controller="AccommodationManagement" asp-action="Index"
                           class="btn btn-info fw-bold shadow-sm w-100 py-2 text-white">
                            <i class="bi bi-house-door-fill"></i> Go to Accommodations
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
