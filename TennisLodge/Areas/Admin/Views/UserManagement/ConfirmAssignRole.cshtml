@using TennisLodge.Web.ViewModels.Admin.UserManagement
@model ConfirmAssignRoleViewModel

@{
    ViewData["Title"] = "Confirm Role Assignment";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-success text-white text-center py-3 rounded-top-4">
                    <h3 class="mb-0 fw-bold">
                        <i class="bi bi-person-plus-fill me-2"></i>
                        Confirm Role Assignment
                    </h3>
                </div>
                
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <div class="alert alert-info border-0 rounded-3">
                            <i class="bi bi-info-circle-fill me-2"></i>
                            <strong>You are about to assign a role to a user.</strong>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-envelope-fill text-success me-3 fs-4"></i>
                                <div>
                                    <small class="text-muted fw-bold">USER EMAIL</small>
                                    <div class="fw-bold text-dark">@Model.UserEmail</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-shield-fill text-warning me-3 fs-4"></i>
                                <div>
                                    <small class="text-muted fw-bold">ROLE TO ASSIGN</small>
                                    <div class="fw-bold text-dark">@Model.Role</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-warning border-0 rounded-3 mb-4">
                        <div class="d-flex align-items-start">
                            <i class="bi bi-exclamation-triangle-fill text-warning me-2 mt-1"></i>
                            <div>
                                <strong>Important:</strong> This action will grant the user access to features and permissions associated with the "@Model.Role" role. Please ensure this is the intended role for this user.
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between gap-3">
                        <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index" 
                           class="btn btn-outline-secondary flex-fill fw-bold">
                            <i class="bi bi-arrow-left me-2"></i>
                            Cancel
                        </a>
                        
                        <form method="post" asp-action="AssignRoleConfirmed" asp-controller="UserManagement" asp-area="Admin" class="flex-fill">
                            <input type="hidden" name="userId" value="@Model.UserId" />
                            <input type="hidden" name="role" value="@Model.Role" />
                            <button type="submit" class="btn btn-success flex-fill fw-bold">
                                <i class="bi bi-check-circle-fill me-2"></i>
                                Confirm Assignment
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 