@using TennisLodge.Web.ViewModels.Admin.UserManagement
@model ConfirmDeleteUserViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0 fw-bold">
                        <i class="bi bi-exclamation-triangle-fill"></i> Confirm Delete User
                    </h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-trash-fill text-danger" style="font-size: 3rem;"></i>
                    </div>
                    
                    <div class="alert alert-danger">
                        <h6 class="fw-bold">Are you sure you want to delete this user?</h6>
                        <p class="mb-0">
                            <strong>User:</strong> @Model.UserEmail<br>
                            <strong>User ID:</strong> @Model.UserId
                        </p>
                        <hr>
                        <div class="alert alert-warning mb-0">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <strong>Warning:</strong> This action cannot be undone. All user data will be permanently deleted.
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index" 
                           class="btn btn-outline-secondary fw-bold">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        
                        <form method="post" asp-area="Admin" asp-controller="UserManagement" asp-action="DeleteUserConfirmed">
                            <input type="hidden" name="userId" value="@Model.UserId" />
                            <button type="submit" class="btn btn-danger fw-bold">
                                <i class="bi bi-trash-fill"></i> Delete User
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 