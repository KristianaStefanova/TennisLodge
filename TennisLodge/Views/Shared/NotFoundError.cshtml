@{
    ViewData["Title"] = "Page Not Found";
}

@section Styles {
    <link rel="stylesheet" href="~/css/errors.css" />
}

<div class="cinema-bg d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="error-card text-center p-5">
        <h1 class="error-code">404</h1>
        <h2 class="mb-3">Page Not Found</h2>
        <p class="text-muted mb-4">
            The page you are looking for might have been removed,<br />
            had its name changed, or is temporarily unavailable.
        </p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-success">Return to Home</a>
    </div>
</div>
