@using static TennisLodge.GCommon.ApplicationConstants;
@model TennisLodge.Web.ViewModels.Tournament.TournamentFormInputModel

@{
    ViewData["Title"] = "Create Tournament";

    bool startDateParsed = DateOnly.TryParse(Model?.StartDate, out DateOnly startDate);
    string startDateInputValue = startDateParsed ? startDate.ToString(AppDateFormat) : string.Empty;

    bool endDateParsed = DateOnly.TryParse(Model?.EndDate, out DateOnly endDate);
    string endDateInputValue = endDateParsed ? endDate.ToString(AppDateFormat) : string.Empty;
}

<div class="container mt-5 mb-5">
    <div class="card shadow-lg rounded-4">
        <div class="card-body p-5">
            <h2 class="mb-4 text-center text-success">Add New Tournament</h2>

            <form asp-action="Create" method="post" novalidate>
                <div class="row g-4">

                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label fw-semibold"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Location" class="form-label fw-semibold"></label>
                        <input asp-for="Location" class="form-control" />
                        <span asp-validation-for="Location" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Surface" class="form-label fw-semibold"></label>
                        <input asp-for="Surface" class="form-control" />
                        <span asp-validation-for="Surface" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Organizer" class="form-label fw-semibold"></label>
                        <input asp-for="Organizer" class="form-control" />
                        <span asp-validation-for="Organizer" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="StartDate" class="form-label fw-semibold"></label>
                        <input type="date" name="StartDate" class="form-control" value="@startDateInputValue" />
                        <span asp-validation-for="StartDate" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="EndDate" class="form-label fw-semibold"></label>
                        <input type="date" name="EndDate" class="form-control" value="@endDateInputValue" />
                        <span asp-validation-for="EndDate" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="CategoryId" class="form-label fw-semibold"></label>
                        <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
                            <option value="">-- Select a category --</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger small"></span>
                    </div>


                    <div class="col-md-6">
                        <label asp-for="ImageUrl" class="form-label fw-semibold"></label>
                        <input asp-for="ImageUrl" class="form-control" />
                        <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Description" class="form-label fw-semibold"></label>
                        <textarea asp-for="Description" rows="5" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mt-4 text-center">
                    <button type="submit" class="btn btn-primary px-4 py-2 rounded-pill">
                        <i class="bi bi-plus-circle me-2"></i>Create Tournament
                    </button>
                    <a asp-action="All" class="btn btn-secondary ms-3 rounded-pill">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
