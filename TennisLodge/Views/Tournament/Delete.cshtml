@model TennisLodge.Web.ViewModels.Tournament.TournamentDetailsViewModel

@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h4>Confirm Deletion</h4>
                </div>
                <div class="card-body text-center">

                    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl"
                             alt="@Model.Name"
                             class="img-fluid rounded mb-3 border"
                             style="max-height: 250px; object-fit: cover;" />
                    }

                    <p class="fs-5">
                        Are you sure you want to delete the tournament <strong>@Model.Name</strong>?
                    </p>
                    <p class="text-muted mb-4">
                        This action cannot be undone.
                    </p>

                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger me-2">
                            Confirm
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            Cancel
                        </a>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
