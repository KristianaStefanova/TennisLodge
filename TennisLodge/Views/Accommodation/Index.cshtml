@using TennisLodge.Web.ViewModels.Accommodation
@model IEnumerable<AccommodationViewModel>

@{
    ViewData["Title"] = "Accommodation Offers";
}

<h2 class="mb-4 text-center text-success">Accommodation Offers</h2>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        No accommodation offers available at the moment.
    </div>
}
else
{
    <table class="table table-striped align-middle shadow-sm rounded-3">
        <thead class="table-light">
            <tr>
                <th>City</th>
                <th>Available From</th>
                <th>Available To</th>
                <th>Host</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.City</td>
                    <td>@item.AvailableFrom?.ToShortDateString()</td>
                    <td>@item.AvailableTo?.ToShortDateString()</td>
                    <td>@item.HostFullName</td>
                    <td class="text-end">
                        @if (item.IsOwner)
                        {
                            <a asp-controller="Accommodation"
                               asp-action="Edit"
                               asp-route-id="@item.Id"
                               class="btn btn-sm fw-semibold text-white rounded-pill px-3 me-2 shadow"
                               style="background: linear-gradient(135deg, #00b09b, #96c93d); border: none;">
                                <i class="bi bi-pencil-square me-1"></i>Edit
                            </a>

                
                            <a asp-controller="Accommodation"
                                asp-action="Delete"
                                asp-route-id="@item.Id"
                                class="btn btn-sm fw-semibold text-white rounded-pill px-3 shadow"
                                style="background: linear-gradient(135deg, #ff416c, #ff4b2b); border: none;">
                                <i class="bi bi-trash me-1"></i>Delete
                            </a>

                        }
                        else
                        {
                            <button class="btn btn-sm fw-semibold text-white rounded-pill px-3 shadow"
                                    style="background: linear-gradient(135deg, #3a7bd5, #00d2ff); border: none;">
                                <i class="bi bi-send-check me-1"></i>Request
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
