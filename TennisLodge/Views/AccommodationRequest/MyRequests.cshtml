@using TennisLodge.Web.ViewModels.Accommodation
@model IEnumerable<AccommodationRequestViewModel>

@{
    ViewData["Title"] = "My Accommodation Requests";
}

<h2 class="mb-4">My Accommodation Requests</h2>

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert">
        You have no accommodation requests at the moment.
    </div>
}
else
{
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Tournament</th>
                <th>Number of Guests</th>
                <th>Notes</th>
                <th>Status</th>
                <th>Created On</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.TournamentName</td>
                    <td>@request.NumberOfGuests</td>
                    <td>@request.Notes ?? "-"</td>
                    <td>
                        @if (request.IsFulfilled)
                        {
                            <span class="badge bg-success">Fulfilled</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                    </td>
                    <td>@request.CreatedOn.ToString("MMM dd, yyyy")</td>
                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1">Previous</a>
            </li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#">Next</a>
            </li>
        </ul>
    </nav>
}
