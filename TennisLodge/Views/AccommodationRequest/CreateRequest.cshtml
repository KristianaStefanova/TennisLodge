@using TennisLodge.Web.ViewModels.Accommodation;
@model AccommodationRequestInputModel

<h2>Request Accommodation</h2>

<form asp-action="SendRequest" method="post">
    <input type="hidden" asp-for="AccommodationId" />

    <div class="form-group">
        <label asp-for="TournamentId">Tournament</label>
        <select asp-for="TournamentId" asp-items="Model.Tournaments" class="form-control"></select>
        <span asp-validation-for="TournamentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumberOfGuests"></label>
        <input asp-for="NumberOfGuests" class="form-control" />
        <span asp-validation-for="NumberOfGuests" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes"></label>
        <textarea asp-for="Notes" class="form-control"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Send Request</button>
</form>
